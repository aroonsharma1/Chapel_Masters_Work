#!/usr/bin/env bash

CWD=$(cd $(dirname $0) ; pwd)

source $CWD/common.bash

# qthreads + numa + none
$CWD/nightly.numa -full

# This should be common-gasnet.bash, but since it also sources
# common.bash, we copy it here
export CHPL_COMM=gasnet
export GASNET_SPAWNFN=L
export GASNET_ROUTE_OUTPUT=0
export CHPL_GASNET_CFG_OPTIONS=--disable-ibv
# Do we need/want this?
export GASNET_QUIET=Y

# qthreads + numa + gasnet + multilocale suite
$CWD/nightly.numa -multilocale
