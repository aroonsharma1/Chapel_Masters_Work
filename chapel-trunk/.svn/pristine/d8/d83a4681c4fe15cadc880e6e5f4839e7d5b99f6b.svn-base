chapel/
  COPYRIGHT           -- copyright message for the compiler
  LICENSE             -- current license agreement
  Makefile            -- top-level Makefile (doesn't do much)
  compiler/           -- sources for Chapel-to-C translator
  doc/                -- documentation for Chapel (mostly internal)
  etc/                -- currently, support for Chapel mode in emacs
  examples/           -- created to store official examples (way out of date)
  make/               -- contains common Makefile stuff
    Makefile          -- echoes some of the inferred settings
    Makefile.base     -- base Makefile to be included by all other Makefiles
    Makefile.platform -- infers what platform we're making from
    Makefile.cygwin   -- platform-specific Makefile settings
    Makefile.freebsd  -- "
    Makefile.sun      -- "
    Makefile.unknown  -- generates error message when platform isn't recognized
    Makefile.gnu      -- gnu-specific settings
  modules/            -- code that's written in Chapel goes here
    provided/         -- contains optional modules
    standard/         -- automatically included modules
  runtime/            -- runtime libraries
    etc/              -- extras for runtime libraries
    include/          -- headers for runtime libraries
    src/              -- sources for runtime libraries
  test/               -- regression test directory
  third-party/        -- storage for sources external to this project
    boehmgc/          -- Boehm GC working directory
      gc6.2/	      -- the unpacked GC source directories
        cygwin/	      -- platform-specific installations
        freebsd/      -- "
        linux64/      -- "
        sun/          -- "
    dparser/          -- D Parser distribution
      d/              -- the unpacked d parser source directories
        cygwin/	      -- platform-specific installations
        freebsd/      -- "
        linux64/      -- "
        sun/          -- "
