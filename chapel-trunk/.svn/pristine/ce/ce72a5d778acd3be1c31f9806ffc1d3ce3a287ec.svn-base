#!/usr/bin/env bash
#
# --fast testing
#
# Run only for the examples for now
#
. /etc/profile

LOGFILE=/tmp/nightly.fast.$USER.$$.out
LOGFILE2=$HOME/tmp/nightly.fast.out
echo `date` "" "Testing --fast for examples.  Log files: $LOGFILE and $LOGFILE2"
source ~/.chapelbashrc-cron && ~/chapel/util/cron/nightly -cron -fast -examples >& $LOGFILE

cp $LOGFILE $LOGFILE2 && rm -f $LOGFILE

