\newcommand{\chpl}[1]{\lstinline[language=chapel,basicstyle=\small\ttfamily,keywordstyle=]!#1!}
\newcommand{\varname}[1]{\emph{#1}}
\newcommand{\typename}[1]{\emph{#1}}
\newcommand{\fnname}[1]{\chpl{#1}}

