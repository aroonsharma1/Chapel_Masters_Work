#!/usr/bin/env bash
#
# Normal run of all tests
#

source $(cd $(dirname $0) ; pwd)/common.bash

TEST_PLATFORM=$($HOME/chapel/util/chplenv/platform)
TEST_COMPILER=$($HOME/chapel/util/chplenv/compiler)

export LOGFILE=~/tmp/nightly.$TEST_PLATFORM.$TEST_COMPILER.out
log_info "Testing everything on $TEST_PLATFORM with $TEST_COMPILER. Log file: $LOGFILE"

with_logging $LOGFILE ~/chapel/util/cron/nightly -cron
