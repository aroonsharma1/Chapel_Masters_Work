#!/usr/bin/env bash
#
# default configuration testing 
#
# Runs nightly with -compperformance (default).

source $(cd $(dirname $0) ; pwd)/common.bash

compperf_opt="-compperformance (default)"

export LOGFILE=~/tmp/nightly.linux64.out
log_info "Testing the default-everything configuration.  Log file: $LOGFILE"
with_logging $LOGFILE ~/chapel/util/cron/nightly -cron $compperf_opt
