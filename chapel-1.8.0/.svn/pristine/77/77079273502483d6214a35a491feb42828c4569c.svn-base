#!/bin/sh

# These C tests don't conform to -Wall
unset CHPL_DEVELOPER

COMP=`$CHPL_HOME/util/config/compileline --compile`
RSRC="$CHPL_HOME/runtime/src/qio"

echo $COMP | grep atomics/intrinsics
if [ $? == 0 ]
then
  echo C tests will run using atomics/intrinsics
else
  echo Skipping C I/O tests without atomics/intrinsics
  exit
fi

T1="$COMP -g deque_test.c -DSIMPLE_TEST $RSRC/deque.c -Wall -o deque_test"
T2="$COMP -g qbuffer_test.c -DSIMPLE_TEST $RSRC/qbuffer.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/deque.c -Wall -o qbuffer_test"
T3="$COMP -g qio_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread -o qio_test"
T4="$COMP -g qio_formatted_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/qio_formatted.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread -o qio_formatted_test"
T5="$COMP -g qio_memfile_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/qio_formatted.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread -o qio_memfile_test"
T6="$COMP -g qio_bits_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread -o qio_bits_test"
T7="$COMP -g qio_mark_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread -o qio_mark_test"

echo $T1
echo $T2
echo $T3
echo $T4
echo $T5
echo $T6
echo $T7

$T1 && $T2 && $T3 && $T4 && $T5 && $T6 && $T7

RETVAL=$?

runtest() {
  EXE=$1
  DESC=$2
  echo Running $EXE
  $EXE > /dev/null
  RETVAL=$?
  if [ $RETVAL -eq 0 ]
  then
    echo "[Success matching C I/O test $EXE $DESC]"
    rm $EXE
  else
    echo "[Error matching C I/O test $EXE $DESC]"
  fi
}

if [ $RETVAL -eq 0 ]
then
  echo "[Success compiling C I/O tests]"

  runtest ./deque_test "Deque Test"
  runtest ./qbuffer_test "Buffer Test"
  runtest ./qio_test "I/O Test"
  runtest ./qio_formatted_test "Formatted I/O Test"
  runtest ./qio_memfile_test "Memory File Test"
  runtest ./qio_bits_test "Bit I/O Test"
  runtest ./qio_mark_test "Mark I/O Test"
else
  echo "[Error compiling C I/O tests]"
fi

