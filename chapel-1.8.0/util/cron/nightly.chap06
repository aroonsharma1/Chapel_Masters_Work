#!/usr/bin/env bash
. /etc/profile
echo Starting $0 on `hostname`.; module list; printenv; echo

LOGFILE=/tmp/nightly.baseline.out
LOGFILE2=$HOME/tmp/nightly.baseline.out
echo "Testing baseline on `date`.  Log files: $LOGFILE and $LOGFILE2"
rm -f $LOGFILE
source ~/.chplcron.baseline.bashrc && ~/chapel/util/cron/nightly -cron -baseline -suppress Suppressions/baseline.suppress -compopts --inline >& $LOGFILE

cp $LOGFILE $LOGFILE2

echo Finished $0 on `date`.
